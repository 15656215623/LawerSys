<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
<!-- 实体类和表的映射 -->
<class name="cn.com.bean.Order" table="order" catalog="lawer" >
<id name="oid" column="oid"  type="java.lang.Integer">
<!-- 主键自定义增长 -->
<generator class="assigned"></generator>
</id>
<property name="self" type="java.lang.String" length="255"></property>
<property name="other" type="java.lang.String" length="255"></property>
<property name="time" type="java.lang.String" length="255"></property>
<property name="kinds" type="java.lang.String" length="255"></property>
<property name="content" type="java.lang.String" length="255"></property>
<property name="start" type="java.lang.Integer" length="255"></property>
</class>
</hibernate-mapping>
